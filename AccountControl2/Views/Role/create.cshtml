<!DOCTYPE html>
@using System.Reflection;
@using AccountControl2.Controllers;
@using AccountControlLib;

@model Role
@{	
	List<Role> roles = ViewBag.roles;
	Role user = ViewBag.user;
}

<html>
<head>
	<meta charset="utf-8" />
	<title>Create Role</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous" />
	<link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
	<form method="post">
		<div class="container">
			<div class="row">
				<h1>Create Account</h1>
				<div class="form col-lg-12">
					<div>
						<div class="fieldName">
							<label for="tbFirstName">Role Name</label>
						</div>
						@Html.TextBoxFor(model => model.Name)
						@Html.ValidationMessageFor(model => model.Name, "", new { @class = "error" })
					</div>
					<div class="row">
						<div class="footer col-lg-12">
							<input value="Add Role" class="btn" type="submit" />
							<a href="@Url.Action("List")" ForeColor="#66ffff">Users List</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</body>
</html>
