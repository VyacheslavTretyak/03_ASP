<!DOCTYPE html>
@using System.Reflection;
@using AccountControl2.Controllers;
@using AccountControlLib;

@model User
@{	
	List<Role> roles = ViewBag.roles;
	User user = ViewBag.user;
}

<html>
<head>
	<meta charset="utf-8" />
	<title>Create Account</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous" />
	<link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
	<form method="post">
		<div class="container">
			<div class="row">
				<h1>Create Account</h1>
				<div class="form col-lg-12">
					<div>
						<div class="fieldName">
							<label for="tbFirstName">First Name</label>
						</div>					
						@Html.TextBoxFor(model=>model.FirstName)
						@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "error" })

					</div>
					<div>
						<div class="fieldName">
							<label for="tbLastName">Last Name</label>
						</div>					
						@Html.TextBoxFor(model => model.LastName)
						@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "error" })
					</div>
					<div>
						<div class="fieldName">
							<label for="tbAdress">Adress</label>
						</div>
						@Html.TextBoxFor(model => model.Adress)
					</div>
					<div class="space"></div>
					<div>
						<div class="fieldName">
							<label for="tbEmail">Email</label>
						</div>					
						@Html.TextBoxFor(model => model.Email)
						@Html.ValidationMessageFor(model => model.Email, "", new { @class = "error" })
					</div>
					<div>
						<div class="fieldName">
							<label for="tbPassword">Password</label>
						</div>			
						@Html.PasswordFor(model => model.Password)
						@Html.ValidationMessageFor(model => model.Password, "", new { @class = "error" })
					</div>
					<div>
						<div class="fieldName">
							<label for="tbConfirmPassword">Confirm Password</label>
						</div>						
						@Html.PasswordFor(model => model.ConfirmPassword)
						@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "error" })
					</div>
					<div>
						<div class="fieldName">
							<label for="cbRole">Role</label>
						</div>
						@Html.DropDownList("RoleString", new SelectList(roles))
					</div>
				</div>
			</div>
			<div class="row">
				<div class="footer col-lg-12">
					<input value="Add User" class="btn" type="submit" />
					<a href="@Url.Action("List")" ForeColor="#66ffff">Users List</a>
				</div>
			</div>
		</div>
	</form>
</body>
</html>
